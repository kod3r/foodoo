<h1>Listing searches</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Method filter</th>
      <th>Cuisine filter</th>
      <th>Price filter</th>
      <th>Members</th>
      <th>Time</th>
      <th>Date</th>
      <th>Ip address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search.user_id %></td>
        <td><%= search.method_filter %></td>
        <td><%= search.cuisine_filter %></td>
        <td><%= search.price_filter %></td>
        <td><%= search.members %></td>
        <td><%= search.time %></td>
        <td><%= search.date %></td>
        <td><%= search.ip_address %></td>
        <td><%= search.latitude %></td>
        <td><%= search.longitude %></td>
        <td><%= link_to 'Show', search %></td>
        <td><%= link_to 'Edit', edit_search_path(search) %></td>
        <td><%= link_to 'Destroy', search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

