<div class="text-center">
<button class="btn btn-primary btn-large" id="group_search_btn">Run Search</button>
</div>
<br>

<table class="table table-hover pop" style="max-width: 400px; margin:auto;">
  <tbody>
    <!-- Change User.all to Friends after friend integration -->
    <% User.all.each do |user| %>
      <tr>
        <td class="lead"><%= user.username %></td>
        <td>Restaurants: <%= user.restaurants.count %></td>
        <td style="color:orange;">
        <%= check_box_tag "user_ids[]", user.id, false, :class => "cbox lead", :id => "cbox_"+user.id.to_s %>
        Add
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
$(function(){
  $('#group_search_btn').click(function(){
    var checked_people = [];
    console.log("clicked");
    $.each($('.cbox'), function(idx, element){
      console.log(element);
      if($(element).is(':checked')){
        console.log('ok');
        checked_people.push(element.value);
      } else {
        console.log('not checked');
      }
    });
    checked_params = checked_people.join(",");
    window.location = "/searches/new?ppl="+checked_params;
  });
});
</script>
