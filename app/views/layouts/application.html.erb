<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Foodoo" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Rails Bootstrap" %>">
    <%= stylesheet_link_tag "application", :media => "all", cache: true %>
    <%= javascript_include_tag "application", cache: true %>
    <%= csrf_meta_tags %>
    <%= include_gon %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </div>
    </div>
    <main role="main">
      <div class="container vidwrap">
        <%= render 'layouts/messages' %>
        <%= yield %>
        <footer>
        </footer>
      </div>
    </main>
  </body>
</html>

